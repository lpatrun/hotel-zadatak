{% extends 'main_layout.html.twig' %}

{% block header %}
	<header class="header">
		<div class="gold-bar top-bar-font">
			<div class="gold-bar__container">
				<div class="left-side">
					<ul>
						<li>
							<img src="images/Pin.png" alt="pin"/>
							Location
						</li>
						<li>
							<img src="images/Envelope.png" alt="mail"/>
							Mail us
						</li>
						<li>
							<img src="images/LoginKey.png" alt="Login"/>
							Login
						</li>
					</ul>
				</div>

				<div class="right-side">
					<img src="images/Search.png" alt="Search"/>
					<span>DE</span>
					<span>EN</span>
				</div>
			</div>
		</div>

		<div class="brown-bar">
			<div class="brown-bar__container">
				<div class="main-title hotel-font">
					<h1>Hotel</h1>
				</div>

				<div class="main-menu main-menu-font">
					<ul>
						<li>Home</li>
						<li>About</li>
